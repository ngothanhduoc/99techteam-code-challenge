# =================================
# SERVER CONFIGURATION
# =================================

# Node environment (development | production | test)
NODE_ENV=development

# Server port
PORT=3000

# =================================
# DATABASE CONFIGURATION
# =================================

# MongoDB connection URI
# For local development without authentication:
MONGODB_URI=mongodb://localhost:27017/news_db

# For Docker with authentication:
# MONGODB_URI=mongodb://admin:admin_password@localhost:27017/news_db?authSource=admin

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/news_db?retryWrites=true&w=majority

# =================================
# JWT AUTHENTICATION
# =================================

# JWT secret key - MUST be changed in production!
# Generate a strong random string for production use
# Example: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time
# Examples: '1h', '7d', '30d', '90d'
JWT_EXPIRES_IN=7d

# =================================
# OPTIONAL CONFIGURATIONS
# =================================

# Log level (error | warn | info | http | debug)
# LOG_LEVEL=info

# Enable/disable API documentation
# ENABLE_API_DOCS=true

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
